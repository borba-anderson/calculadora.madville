<script>
    const FERIADOS = [
        "2026-01-01", "2026-02-16", "2026-02-17", "2026-03-09",
        "2026-04-03", "2026-04-21", "2026-05-01", "2026-06-04", 
        "2026-09-07", "2026-10-12", "2026-11-02", "2026-11-15", 
        "2026-11-20", "2026-12-25"
    ];

    function tab(n) {
        document.getElementById('p1').style.display = n === 1 ? 'block' : 'none';
        document.getElementById('p2').style.display = n === 2 ? 'block' : 'none';
        document.getElementById('t1').classList.toggle('active', n === 1);
        document.getElementById('t2').classList.toggle('active', n === 2);
        document.getElementById('result-area').style.display = 'none';
    }

    function isU(d) {
        const day = d.getDay();
        if (day === 0 || day === 6) return false;
        const s = d.getFullYear() + '-' + String(d.getMonth()+1).padStart(2,'0') + '-' + String(d.getDate()).padStart(2,'0');
        return !FERIADOS.includes(s);
    }

    function parse(v) {
        if(!v) return NaN;
        const p = v.split('-');
        return new Date(p[0], p[1]-1, p[2]);
    }

    function calc1() {
        const s = parse(document.getElementById('s1').value);
        const e = parse(document.getElementById('e1').value);
        if(isNaN(s) || isNaN(e)) return;
        
        let c = 0, curr = new Date(s);
        while(curr <= e) { 
            if(isU(curr)) c++; 
            curr.setDate(curr.getDate()+1); 
        }
        show("Diferen√ßa √ötil", c + (c === 1 ? " dia √∫til" : " dias √∫teis"));
    }

    function calc2() {
        const s = parse(document.getElementById('s2').value);
        const q = parseInt(document.getElementById('q2').value);
        if(isNaN(s) || isNaN(q)) return;
        
        let c = isU(s) ? 1 : 0, curr = new Date(s);
        while(c < q) { 
            curr.setDate(curr.getDate()+1); 
            if(isU(curr)) c++; 
        }
        const fmt = curr.toLocaleDateString('pt-BR', {weekday:'long', day:'2-digit', month:'long', year:'numeric'});
        show("Previs√£o de Entrega", fmt.charAt(0).toUpperCase() + fmt.slice(1));
    }

    function show(h, v) {
        document.getElementById('res-h').innerText = h;
        document.getElementById('res-v').innerText = v;
        document.getElementById('result-area').style.display = 'block';
    }

    async function copyRes() {
        const h = document.getElementById('res-h').innerText;
        const v = document.getElementById('res-v').innerText;
        const btn = document.getElementById('copyBtn');
        const text = `*Madville GMAD - Prazo Calculado*\n${h}: *${v}*`;
        
        try {
            await navigator.clipboard.writeText(text);
            const originalText = btn.innerHTML;
            btn.style.color = 'var(--primary)';
            btn.innerHTML = '<span>‚úÖ</span> Copiado!';
            setTimeout(() => {
                btn.innerHTML = originalText;
                btn.style.color = 'var(--text-dark)';
            }, 2000);
        } catch (err) {
            alert("Erro ao copiar.");
        }
    }
</script>
