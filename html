    <div class="form">
        <div id="p1">
            <div class="group">
                <label>In√≠cio do Per√≠odo</label>
                <input type="date" id="s1">
            </div>
            <div class="group">
                <label>Final do Per√≠odo</label>
                <input type="date" id="e1">
            </div>
            <button class="btn-main" onclick="calc1()">Calcular Dias √öteis</button>
        </div>

        <div id="p2" style="display:none">
